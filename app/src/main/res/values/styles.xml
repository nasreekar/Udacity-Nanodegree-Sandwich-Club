<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DetailViewTextStyle">
        <item name="android:fontFamily">@font/itcavantgardestd_bk</item>
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>
    
    <style name="DetailViewHeadingStyle">
        <item name="android:fontFamily">@font/itcavantgardestd_bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MainActivityHeadingStyle">
        <item name="android:textSize">26sp</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/kautivacyrillicblack</item>
    </style>

</resources>
